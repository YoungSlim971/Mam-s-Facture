{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false, // Keeping as per original, though true is generally better
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true, // Allow JavaScript files to be compiled
    "outDir": "dist"
  },
  "include": ["**/*.ts", "**/*.js"], // Include both .ts and .js files
  "exclude": ["node_modules", "tests", "dist"] // Exclude node_modules, tests, and dist
}
